<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- DB 테이블과 컬럼들을 mapper 매핑을 위한 변수 선언-->
	<properties>
		
		<!-- 회원 -->
		<property name="pro01_member" value="pro01_member"/>
		<property name="memberNo" value="member_no"/>
		<property name="memberId" value="member_id"/>
		<property name="memberPw" value="member_pw"/>
		<property name="memberName" value="member_name"/>
		<property name="memberBirth" value="member_birth"/>
		<property name="memberPhone" value="member_phone"/>
		<property name="memberMail" value="member_mail"/>
		<property name="memberMailAgree" value="member_mail_agree"/>
		<property name="memberAdd01" value="member_add01"/>
		<property name="memberAdd02" value="member_add02"/>
		<property name="memberAdd03" value="member_add03"/>
		<property name="regDate" value="reg_date"/>
		<property name="propductComment" value="product_comment"/>
		<property name="productFaq" value="product_faq"/>
		<property name="adminCk" value="admin_ck"/>
		<property name="memberPoint" value="member_point"/>
		
		<!-- 상품 -->
		<property name="pro01_product" value="pro01_product"/>
		<property name="productNo" value="product_no"/>
		<property name="productName" value="product_name"/>
		<property name="cateCode" value="cate_code"/>
		<property name="productPrice" value="product_price"/>
		<property name="productAmount" value="product_amount"/>
		<property name="productIntro" value="product_intro"/>
		<property name="productRegDate" value="product_reg_date"/>
		<property name="productImg" value="product_img"/>
		
		<!-- 질문 게시판 -->
		<property name="pro01_help" value="pro01_help"/>
		<property name="helpNo" value="help_no"/>
		<property name="helpTitle" value="help_title"/>
		<property name="helpName" value="help_name"/>
		<property name="helpContent" value="help_content"/>
		
		<!-- 공지사항 게시판 -->
		<property name="pro01_notice" value="pro01_notice"/>
		<property name="noticeNo" value="notice_no"/>
		<property name="noticeTitle" value="notice_title"/>
		<property name="noticeName" value="notice_name"/>
		<property name="noticeContent" value="notice_content"/>
		
		<!-- 카테고리 -->
		<property name="pro01_category" value="pro01_category"/>
		<property name="tier" value="tier"/>
		<property name="cateName" value="cate_name"/>
		<property name="cateCode" value="cate_code"/>
		<property name="cateParent" value="cate_parent"/>
		
		<!-- 주문	 -->
		<property name="pro01_order" value="pro01_order"/>
		<property name="memberNo" value="member_no"/>
		<property name="memberId" value="member_id"/>
		<property name="productName" value="product_name"/>
		<property name="orderAmount" value="order_amount"/>
		<property name="orderPrice" value="order_price"/>
		<property name="orderDate" value="order_date"/>
		
	</properties>
	
	
	
	<!-- Underscore 명명법을 Camel 명명법으로 매핑 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<!-- 
	typeAliases : mapper.xml의 select 리턴 타입에 들어갈 클래스 경로를 설정
	 -->
	 
	 <typeAliases>
	 	<package name="edu.spring.p01.domain"/>
	 </typeAliases>
	
</configuration>